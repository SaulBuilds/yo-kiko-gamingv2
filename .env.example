# INTERNET COMPUTER PROTOCOL CONFIGURATION
# Internet Identity URL (use https://identity.ic0.app for mainnet)
VITE_ICP_IDENTITY_PROVIDER_URL=https://identity.ic0.app

# GameBet Canister ID (required - your deployed canister ID)
VITE_GAME_BET_CANISTER_ID=

# EVM RPC Canister ID (required - IC network's EVM RPC canister ID)
VITE_EVM_RPC_CANISTER_ID=

# IC Network Host (use https://ic0.app for mainnet)
VITE_ICP_HOST=https://ic0.app

# ETHEREUM NETWORK CONFIGURATION
# Alchemy API Key for Ethereum mainnet/testnet
VITE_ALCHEMY_API_KEY=

# Ethereum network to use (mainnet, goerli, sepolia)
VITE_ETH_NETWORK=mainnet

# FEATURE FLAGS
# Enable ICP-based betting functionality
VITE_ENABLE_ICP_BETTING=true

# Enable direct Ethereum-based betting 
VITE_ENABLE_ETH_BETTING=true

# Enable Internet Computer Protocol authentication
VITE_ENABLE_ICP_AUTH=true

# SECURITY SETTINGS
# Secret used for signing and verifying WebSocket messages
WS_SECRET=

# DATABASE CONNECTION (for server)
# DATABASE_URL is already set by the Replit environment

# CORS settings (comma-separated domains, e.g., https://example.com,https://app.example.com)
ALLOWED_ORIGINS=*